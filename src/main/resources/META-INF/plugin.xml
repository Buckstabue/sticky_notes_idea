<idea-plugin>
    <id>com.buckstabue.stickynotes</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Stick Note" anchor="left"
                    factoryClass="com.buckstabue.stickynotes.toolwindow.StickyNoteToolWindowFactory"/>
        <projectService
                serviceInterface="com.buckstabue.stickynotes.service.StickyNotesService"
                serviceImplementation="com.buckstabue.stickynotes.idea.StickyNotesServiceImpl"/>
    </extensions>

    <actions>
        <action id="com.buckstabue.stickynotes.addstickynote.AddStickyNoteAction"
                class="com.buckstabue.stickynotes.addstickynote.AddStickyNoteAction" text="Add a Sticky Note">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut first-keystroke="control shift S" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
